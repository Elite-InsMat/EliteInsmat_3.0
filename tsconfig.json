{
    "include": [
      "./src/**/*"
    ],
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "lib": ["dom", "es2017"],
      "allowJs": true,
      "checkJs": true,
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmit": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "baseUrl": "src/",
      "paths": {
        "@components/*": [
          "components/*"
        ],
        "@images/*": [
          "images/*"
        ],
        "@pages/*": [
          "pages/*"
        ],
        "@styles/*": [
          "styles/*"
        ],
        "@type/*": [
          "types/*"
        ] // @types would clash with dev dependencies
      }
    }
}